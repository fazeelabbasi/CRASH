{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build client",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "client/net.cpp",
                "client/net.h",
                "client/entry.cpp",
                "client/entry.h",
                "-o",
                "client/a.out",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "build server",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "server/entry.cpp",
                "server/Server.h",
                "server/Server.cpp",
                "-o",
                "server/a.out",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}